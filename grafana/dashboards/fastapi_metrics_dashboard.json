        {
          "expr": "rate(transaction_success_total[1m])",
          "legendFormat": "성공 거래/분"
        }
      ]
    },
    {
      "id": 11,
      "title": "실패 거래 추이",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
