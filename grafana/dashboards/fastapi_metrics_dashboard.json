{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard"
      }
    ]
  },
  "title": "이상거래 탐지 모니터링",
  "timezone": "browser",
  "schemaVersion": 35,
  "version": 1,
  "time": {          
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",

  "panels": [
    {
      "id": 1,
      "title": "총 거래 건수",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "fraud_transactions_total",
          "legendFormat": "총 거래"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 2,
      "title": "평균 응답 시간",
      "type": "gauge",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[1m]) / rate(http_request_duration_seconds_count[1m])",
          "legendFormat": "응답 시간"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.5, "color": "yellow" },
              { "value": 0.8, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "현재 Kafka Lag",
      "type": "stat",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sum(kafka_consumergroup_lag)",
          "legendFormat": "총 Lag"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 1000, "color": "yellow" },
              { "value": 5000, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "모델 정확도",
      "type": "gauge",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "fraud_model_accuracy",
          "legendFormat": "정확도"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 0.7, "color": "yellow" },
              { "value": 0.9, "color": "green" }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Feature Drift Score",
      "type": "gauge",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "fraud_model_feature_drift",
          "legendFormat": "PSI Score"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.2, "color": "yellow" },
              { "value": 0.5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "거래 처리 현황",
      "type": "row",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 7,
      "title": "이상 탐지 건수 증가율 (1분)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 5, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(fraud_transactions_total[1m])",
          "legendFormat": "거래/분"
        }
      ],
      "options": {
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    },
    {
      "id": 8,
      "title": "응답 시간 분포",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 5, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[1m]) / rate(http_request_duration_seconds_count[1m])",
          "legendFormat": "평균"
        }
      ]
    },
    {
      "id": 9,
      "title": "모델 성능 지표",
      "type": "row",
      "gridPos": { "x": 0, "y": 13, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 10,
      "title": "모델 성능 지표 추이",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "fraud_model_precision",
          "legendFormat": "Precision"
        },
        {
          "expr": "fraud_model_recall",
          "legendFormat": "Recall"
        },
        {
          "expr": "fraud_model_accuracy",
          "legendFormat": "Accuracy"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        }
      }
    },
    {
      "id": 11,
      "title": "Feature Drift 추이",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 14, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "fraud_model_feature_drift",
          "legendFormat": "PSI Score"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.2, "color": "yellow" },
              { "value": 0.5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Kafka 모니터링",
      "type": "row",
      "gridPos": { "x": 0, "y": 22, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 13,
      "title": "Consumer Lag by Topic",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 23, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "kafka_consumergroup_lag",
          "legendFormat": "{{topic}} - {{consumergroup}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 1000, "color": "yellow" },
              { "value": 5000, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 14,
      "title": "Consumer Throughput",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 23, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(kafka_consumergroup_current_offset[1m])",
          "legendFormat": "{{topic}} - {{consumergroup}}"
        }
      ]
    }
  ]
}