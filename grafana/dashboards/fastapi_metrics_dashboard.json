      "title": "처리 시간 추이",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 11, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "transaction_processing_time",
          "legendFormat": "처리 시간"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
