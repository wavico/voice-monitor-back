  "panels": [
    {
      "id": 1,
      "title": "총 거래 건수",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "transaction_count_total",
          "legendFormat": "총 거래"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 2,
      "title": "평균 응답 시간",
      "type": "gauge",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "transaction_processing_time",
          "legendFormat": "처리 시간"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.5, "color": "yellow" },
              { "value": 0.8, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "성공한 거래",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "transaction_success_total",
          "legendFormat": "성공"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "실패한 거래",
      "type": "stat",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "transaction_failure_total",
          "legendFormat": "실패"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "거래 금액",
      "type": "gauge",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "transaction_amount",
          "legendFormat": "현재 거래 금액"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyKRW",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 1000000, "color": "yellow" },
              { "value": 10000000, "color": "red" }
            ]
          }
        }
      }
    },
