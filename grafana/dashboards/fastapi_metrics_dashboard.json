    },
    {
      "id": 12,
      "title": "HTTP 요청 메트릭",
      "type": "row",
      "gridPos": { "x": 0, "y": 28, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 13,
      "title": "HTTP 요청 수 (경로별)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 29, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{handler}} - {{method}}"
        }
      ]
    },
    {
      "id": 14,
      "title": "HTTP 응답 시간 (경로별)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 29, "w": 12, "h": 8 },
      "targets": [
        {
